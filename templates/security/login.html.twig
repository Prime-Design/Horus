{% extends 'base.html.twig' %}

{% block title %}
	Connectez vous
{% endblock %}

{% block body %}
	<div class="container-fluid mt-5">
		<div class="container">
			<div class="row center">
				<div class="col-md-4"></div>
				<div class="col-md-4">
					<h3 class="mb-3 title" style="text-align: center;">Connexion</h3>
					<form method="post">
						{% if error %}
							<div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								You are logged in as
								{{ app.user.userIdentifier }},
								<a href="{{ path('app_logout') }}">Logout</a>
							</div>
						{% endif %}

						<div class="form-group mb-3">
							<input type="email" class="form-control" id="inputEmail" name="email" autocomplete="email" placeholder="Email" required autofocus/>
						</div>
						<div class="form-group mb-3">
							<input type="password" class="form-control" id="inputPassword" name="password" placeholder="Mot de passe" required/>
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div class="form-group">
							<div class="form-check mb-3">
								<input type="checkbox" class="form-check-input" id="rememberMe" name="_remember_me"/>
								<label class="form-check-label rgpd" for="rememberMe">Remember me</label>
							</div>
						</div>

						<div class="row mb-5 wrappers">
							<div class="col-md-5">
								<button type="submit" class="btn btn-sm wtextes">Connexion</button>
							</div>

							<div class="col-md-7">
								<div class="row wrappers">
									<div class="col-md-7 rgpd">Pas inscrit?</div>
									<div class="col-md-5">
										<a type="submit" class="btn btn-sm wtextes" href="{{ path('app_register') }}">S'enregistrer</a>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
				<div class="col-md-4"></div>
			</div>
		</div>
	</div>
{% endblock %}

